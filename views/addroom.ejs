<!DOCTYPE html>
<html lang="en">
<head>
    <title>Add Rooms</title>
    <style> #roomsnav { color: #ffffff !important; font-weight: bolder; } </style>
    <%- include('./partials/head') %>
</head>
<body class="">

    <!-- Header Start -->
    <%- include('./partials/header-admin') %>
    <!-- Header End -->

    <!-- Main Start -->
    <main>
        <section class="text-bg-dark pb-4">
            <div class="container mt-5 pt-2">
                <div class="text-center my-5">
                    <h1><b>Add Rooms</b></h1>
                    <h2>Only admin can acess this page</h2>
                </div>
            </div>
        </section>

        <section class="container ms-md-5 p-4 my-2">
            <form action="/room/add" method="POST" class="text-center mx-auto">
                <div class="row g-3">
                    <div class="col-12">
                        <label for="roomtype" class="form-label">Room Type</label>
                        <input type="text" class="form-control" name="roomtype" id="roomtype" placeholder="Enter type of room">
                    </div>

                    <div class="col-md-6">
                        <label for="guests" class="form-label">Number of Guests</label>
                        <select class="form-select" id="guests" name="guests" aria-label="Number of Guests">
                            <option selected aria-readonly="true">Select limit of guests</option>
                            <option value="1 (1 Adults)">1 (1 Adults)</option>
                            <option value="2 (2 Adults)">2 (2 Adults)</option>
                            <option value="3 (3 Adults)">3 (3 Adults)</option>
                            <option value="4 (4 Adults)">4 (4 Adults)</option>
                            <option value="1.5 (1 Adults, 1 Children)">1.5 (1 Adults, 1 Children)</option>
                            <option value="2.5 (2 Adults, 1 Children)">2.5 (2 Adults, 1 Children)</option>
                            <option value="3.5 (3 Adults, 1 Children)">3.5 (3 Adults, 1 Children)</option>
                            <option value="3.5 (3 Adults, 1 Children)">4.5 (4 Adults, 1 Children)</option>
                        </select>
                    </div>

                    <div class="col-md-6">
                        <label for="price" class="form-label">Price (Per Day)</label>
                        <input type="text" class="form-control" name="price" id="price" placeholder="Enter price of room">
                    </div>

                    <div class="col-12">
                        <label for="description" class="form-label">Description</label>
                        <input type="text" class="form-control" name="description" id="description" placeholder="Enter description of room">
                    </div>

                </div>

                <div class="pt-4 mt-4 text-center">
                    <input type="submit" class="button w-100 btn btn-dark btn-lg" value="Add" title="Add">
                </div>
            </form>
        </section>
    </main>
    <!-- Main End -->

    <!-- Footer Start -->
        <%- include('./partials/footer-admin') %>
    <!-- Footer End -->

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm" crossorigin="anonymous"></script>
    <script src="/js/app.js"></script>
</body>
</html>