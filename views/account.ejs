<!DOCTYPE html>
<html lang="en">
<head>
    <title>Account</title>
    <style>
        #accountnav { color: #ffffff !important; font-weight: bolder; }
        .readonly-input {
            background-color: var(--bs-secondary-bg) !important;
        }
    </style>
    <%- include('./partials/head'); %>
</head>
<body class="">

    <!-- Header Start -->
        <%- include('./partials/header'); %>
    <!-- Header End -->

    <!-- Main Start -->
    <main style=" min-height: 100vh;">
        <section class="text-bg-dark pb-4">
            <div class="container mt-5 pt-2">
                <div class="text-center my-5">
                    <h1><b>Account</b></h1>
                    <h2>Transaction History & Settings</h2>
                </div>
            </div>
        </section>

        <div class="container py-5">
            <ul class="nav nav-tabs nav-pills nav-fill gap-2 p-1 small bg-dark rounded-5 shadow-sm" id="myTabs" role="tablist" style="--bs-nav-link-color: var(--bs-white); --bs-nav-link-hover-color: var(--bs-white); --bs-nav-pills-link-active-color: var(--bs-dark); --bs-nav-pills-link-active-bg: var(--bs-white);">
                <li class="nav-item" role="presentation">
                <a class="nav-link active rounded-5" id="tab1" data-bs-toggle="tab" type="button" role="tab" href="#content1">Transaction History</a>
                </li>
                <li class="nav-item" role="presentation">
                <a class="nav-link rounded-5" id="tab2" data-bs-toggle="tab" type="button" role="tab" href="#content2">Settings</a>
            </ul>

            <section class="container p-2 py-4 table-responsive table-responsive-sm">
                <div class="tab-content pt-4">

                    <div id="content1" class="tab-pane fade show active">
                        <table id="myTable" class="table table-hover">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Transaction Date</th>
                                    <th scope="col">Transaction Time</th>
                                    <th scope="col">Room Type</th>
                                    <th scope="col">From</th>
                                    <th scope="col">To</th>
                                    <th scope="col">Paid</th>
                                    <th scope="col">Status</th>
                                </tr>
                            </thead>
                
                            <tbody>
                                <% let count = 1; %>
                                <% BookData.forEach(function(BookData) { %>
                                <tr>
                                    <th scope="row"><%= count %></th>
                                    <td><%= BookData.transferDate %></td>
                                    <td><%= BookData.transferTime %></td>
                                    <td><%= BookData.roomType %></td>
                                    <td><%= BookData.dateFrom %></td>
                                    <td><%= BookData.dateTo %></td>
                                    <td><%= BookData.amountMoney %></td>
                                    <td class="circle"><%= " " + BookData.transactionStatus %></td>
                                </tr>
                                <% count++ %>
                                <% }); %>
                            </tbody>
                        </table>
                    </div>

                    <div id="content2" class="tab-pane fade">
                        <form action="/account/<%= UserData._id %>" method="POST" class="text-center mx-auto">
                            <div class="row g-3 justify-content-center">
                                <div class="col-md-10 col-lg-7 col-9">
                                    <label for="firstname" class="form-label">First Name</label>
                                    <input type="text" class="form-control readonly-input" name="firstname" id="firstname" readonly value="<%= UserData.firstname %>" required="" placeholder="Enter your first name">
                                    <div class="invalid-feedback">
                                        Valid first name is required.
                                    </div>
                                </div>

                                <div class="col-md-2 col-lg-1 col-3">
                                    <label for="firstNameEdit" class="form-label" style="padding-bottom: 19px;"></label>
                                    <button type="button" class="btn btn-dark w-100 h-50" id="firstNameEdit">Edit</button>
                                </div>
            
                                <div class="col-md-10 col-lg-7 col-9">
                                    <label for="lastname" class="form-label">Last Name</label>
                                    <input type="text" class="form-control readonly-input" name="lastname" id="lastname" readonly value="<%= UserData.lastname %>" required="" placeholder="Enter your last name">
                                    <div class="invalid-feedback">
                                        Valid last name is required.
                                    </div>
                                </div>

                                <div class="col-md-2 col-lg-1 col-3">
                                    <label for="lastNameEdit" class="form-label" style="padding-bottom: 19px;"></label>
                                    <button type="button" class="btn btn-dark w-100 h-50" id="lastNameEdit">Edit</button>
                                </div>
            
                                <div class="col-md-10 col-lg-7 col-9">
                                    <label for="tel" class="form-label">Telephone Number</label>
                                    <input type="text" class="form-control readonly-input" name="tel" id="tel" readonly value="<%= UserData.tel %>" required="" placeholder="Enter price of room">
                                    <div class="invalid-feedback">
                                        Valid telephone number is required.
                                    </div>
                                </div>

                                <div class="col-md-2 col-lg-1 col-3">
                                    <label for="telEdit" class="form-label" style="padding-bottom: 19px;"></label>
                                    <button type="button" class="btn btn-dark w-100 h-50" id="telEdit">Edit</button>
                                </div>

                                <div class="col-md-7 pt-4">
                                    <label for="password" class="form-label">Confirm Password</label>
                                    <input type="password" class="form-control" name="password" id="password" required placeholder="Enter your password">
                                    <div class="invalid-feedback">
                                        Please enter your password!.
                                    </div>
                                </div>
                            </div>
            
                            <div class="pt-4 mt-4 text-center">
                                <input type="submit" class="button w-100 btn btn-dark btn-lg" value="Update" title="Update">
                            </div>
                        </form>
                    </div>

                </div>
            </section>
        </div>
    </main>
    <!-- Main End -->

    <!-- Footer Start -->
        <%- include('./partials/footer') %>
    <!-- Footer End -->


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.7.1/dist/jquery.min.js"></script>
    <script src="/js/app.js"></script>
    <script>
        const table = document.getElementById("myTable");
        svgYellowString = `<div style="display: flex; align-items: center;"><svg xmlns="http://www.w3.org/2000/svg" width="16px" height="16px" fill="yellow" style="border: 2px solid black; border-radius: 50%;" viewBox="0 0 512 512"><path d="M256 512A256 256 0 1 0 256 0a256 256 0 1 0 0 512z"/></svg><span style="padding-left: 2px"> Pending</span></div>`
        svgGreenString = `<div style="display: flex; align-items: center;"><svg xmlns="http://www.w3.org/2000/svg" width="16px" height="16px" fill="#00e52e" style="border: 2px solid black; border-radius: 50%;" viewBox="0 0 512 512"><path d="M256 512A256 256 0 1 0 256 0a256 256 0 1 0 0 512z"/></svg><span style="padding-left: 2px"> Success</span></div>`
        svgRedString = `<div style="display: flex; align-items: center;"><svg xmlns="http://www.w3.org/2000/svg" width="16px" height="16px" fill="red" style="border: 2px solid black; border-radius: 50%;" viewBox="0 0 512 512"><path d="M256 512A256 256 0 1 0 256 0a256 256 0 1 0 0 512z"/></svg><span style="padding-left: 2px"> Failed</span></div>`

        for (let i = 0; i < table.rows.length; i++) {
            for (let j = 0; j < table.rows[i].cells.length; j++) {
                const cell = table.rows[i].cells[j];
                if (cell.classList.contains("circle")) {
                    if (cell.innerText == "Pending") {
                        cell.innerHTML = svgYellowString;
                    } else if(cell.innerText == "Success") {
                        cell.innerHTML = svgGreenString;
                    } else if(cell.innerText == "Failed") {
                        cell.innerHTML = svgRedString;
                    }
                }
            }
        }

        $(document).ready(function () {
            $('#myTabs button').on('click', function (e) {
                e.preventDefault();
                $(this).tab('show');
            });
        });

        document.getElementById("firstNameEdit").addEventListener("click", function () {
            var input = document.getElementById("firstname");
            if (input.readOnly) {
                
                input.readOnly = false;
                input.focus();
                input.style.setProperty("background-color", "white", "important");
            } else {

                input.readOnly = true;
            }
        });
        document.getElementById("firstname").addEventListener("blur", function () {

            this.readOnly = true;
            this.style.setProperty("background-color", "var(--bs-secondary-bg)", "important");
        });

        document.getElementById("lastNameEdit").addEventListener("click", function () {
            var input = document.getElementById("lastname");
            if (input.readOnly) {
                
                input.readOnly = false;
                input.focus();
                input.style.setProperty("background-color", "white", "important");
            } else {

                input.readOnly = true;
            }
        });
        document.getElementById("lastname").addEventListener("blur", function () {

            this.readOnly = true;
            this.style.setProperty("background-color", "var(--bs-secondary-bg)", "important");
        });

        document.getElementById("telEdit").addEventListener("click", function () {
            var input = document.getElementById("tel");
            if (input.readOnly) {
                
                input.readOnly = false;
                input.focus();
                input.style.setProperty("background-color", "white", "important");
            } else {

                input.readOnly = true;
            }
        });
        document.getElementById("tel").addEventListener("blur", function () {

            this.readOnly = true;
            this.style.setProperty("background-color", "var(--bs-secondary-bg)", "important");
        });

        window.onload = function() {
            const params = new URLSearchParams(window.location.search);
            const alertMessage = params.get('alert');
            if (alertMessage) {
                alert(alertMessage);
            }
        }
    </script>
</body>
</html>